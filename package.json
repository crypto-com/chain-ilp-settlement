{
  "name": "ilp-settlement-xrp",
  "bin": {
    "ilp-settlement-xrp": "./bin/run.js"
  },
  "version": "1.0.0",
  "description": "Settle Interledger payments using on-ledger XRP transfers",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "bin",
    "build",
    "build/**/*.test.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "run-s clean build",
    "start": "./bin/run.js",
    "clean": "del-cli .nyc_output coverage build ",
    "build": "tsc",
    "fix": "run-s lint:fix format",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "format": "prettier ",
    "format:fix": "prettier --write 'src/**/*.ts}' tsconfig.json tslint.json",
    "test": "TS_NODE_TRANSPILE_ONLY=true mocha --require ts-node/register --ui mocha-typescript --require source-map-support/register 'test/**/*.test.ts'",
    "test:coverage": "nyc mocha --require ts-node/register --ui mocha-typescript --require source-map-support/register 'test/**/*.test.ts'",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/settlement-xrp.git"
  },
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/ioredis": "^4.0.15",
    "axios": "^0.19.0",
    "bignumber.js": "^9.0.0",
    "body-parser": "^1.19.0",
    "debug": "^4.1.1",
    "express": "^5.0.0-alpha.7",
    "ioredis": "^4.9.0",
    "ripple-lib": "^1.3.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "^4.1.3",
    "@types/jest": "^24.0.18",
    "@types/nock": "^10.0.3",
    "@types/sinon": "^7.0.13",
    "@types/uuid": "^3.4.5",
    "ava": "^2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.1.0",
    "del-cli": "^2.0.0",
    "get-port": "^5.0.0",
    "ioredis-mock": "^4.9.0",
    "jest": "^24.9.0",
    "mocha": "^6.2.0",
    "mocha-typescript": "^1.1.17",
    "mockttp": "^0.17.1",
    "nock": "^10.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.10",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.2"
  }
}
